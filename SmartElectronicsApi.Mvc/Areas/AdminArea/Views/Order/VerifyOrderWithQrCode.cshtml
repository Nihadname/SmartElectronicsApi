<!-- JS Libraries -->
<script src="https://unpkg.com/html5-qrcode@2.3.10/html5-qrcode.min.js"></script>

<script>
    function showStatus(message, isSuccess) {
        const box = document.getElementById('statusBox');
        box.style.display = "block";
        box.style.backgroundColor = isSuccess ? "#d4edda" : "#f8d7da";
        box.style.color = isSuccess ? "#155724" : "#721c24";
        box.innerText = message;
    }

    function onScanSuccess(decodedText, decodedResult) {
        document.getElementById('result').innerText = `Okunan Veri: ${decodedText}`;

        let data;
        try {
            data = JSON.parse(decodedText);
            console.log(data);
        } catch (e) {
            showStatus("QR kod verisi geÃ§erli bir JSON deÄŸil.", false);
            return;
        }

        fetch('http://localhost:5246/api/Order/VerifyOrder', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(res => res.json())
        .then(response => {
            if (response.success) {
                showStatus("âœ… Kargo doÄŸrulandÄ±!", true);
            } else {
                showStatus("âŒ DoÄŸrulama baÅŸarÄ±sÄ±z. Bilgiler eÅŸleÅŸmiyor.", false);
            }
        })
        .catch(err => {
            console.error(err);
            showStatus("âŒ Sunucu hatasÄ± oluÅŸtu.", false);
        });
    }

    const html5QrCode = new Html5Qrcode("reader");

    html5QrCode.start(
        { facingMode: "environment" },
        {
            fps: 10,
            qrbox: { width: 250, height: 250 }
        },
        onScanSuccess,
        (error) => {
            // Optionally show scanning errors
        }
    ).catch(err => {
        showStatus("Kamera baÅŸlatÄ±lamadÄ±: " + err, false);
    });
</script>