@using SmartElectronicsApi.Mvc.ViewModels.Auth

@model ForgetPasswordVm
<div class="container mt-5">
    <div class="card form-card p-4">
        <h3 class="text-center mb-4">Create an Account</h3>
        <form asp-action="ForgetPassword" class="row g-3">
            <!-- This will show the overall validation summary -->
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="col-md-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control shadow-lg input-glow" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
           
            <div class="col-12 d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary submit-btn">Submit</button>
            </div>
        </form>
        
    </div>
</div>
@if (TempData["ForgetPasswordError"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Email Sending Failed',
            text: '@TempData["ForgetPasswordError"]',
            showConfirmButton: true,
        });
    </script>
}
