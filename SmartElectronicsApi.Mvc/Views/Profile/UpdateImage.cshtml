
@using SmartElectronicsApi.Mvc.ViewModels.Auth
@model UserUpdateImageVM
<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-title {
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-control {
        border-radius: 8px;
    }

    input[type="file"] {
        padding: 10px;
    }

    ::file-selector-button {
        background-color: #007bff;
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        ::file-selector-button:hover {
            background-color: #0056b3;
        }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="card-body text-center">
                    <h3 class="card-title mb-4">Upload Your Image</h3>
                    <form action="UpdateImage" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input asp-for="formFile" class="form-control" id="imageUpload"  required>
                        </div>
                        <span asp-validation-for="formFile" class="text-danger"></span>
                        <button type="submit" class="btn btn-primary w-100">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["AddingError"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Login Failed',
            text: '@TempData["AddingError"]',
            showConfirmButton: true,
        });
    </script>
}


    <!-- Bootstrap and Font Awesome JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
 

