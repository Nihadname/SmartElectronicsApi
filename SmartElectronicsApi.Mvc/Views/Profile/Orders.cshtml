@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />    
    <style>
        body {
            background-color: #f5f6f8;
            font-family: 'Roboto', sans-serif;
        }

        .header {
            background-color: #1d294f;
            padding: 30px;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .header h1 {
            font-size: 2rem;
            font-weight: bold;
        }

        .nav-tabs {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .nav-tabs .nav-item .nav-link {
            background-color: white;
            border-radius: 20px;
            margin: 5px 10px;
            padding: 10px 25px;
            font-size: 1rem;
            color: #444;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .nav-tabs .nav-item .nav-link.active {
            background-color: #2874f0;
            color: white;
        }

        .order-table {
            background-color: white;
            margin-top: 30px;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            width: 100%;
        }

        .order-table th, .order-table td {
            white-space: nowrap;
            font-size: 0.95rem;
        }

        .order-table th {
            color: #444;
            font-weight: 600;
            padding: 15px;
        }

        .order-table td {
            color: #666;
            padding: 15px;
            vertical-align: middle;
        }

        .status-box {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f3f4f7;
            border-radius: 12px;
            position: relative;
            cursor: pointer;
        }

        .status-box i {
            font-size: 1.5rem;
            color: #2874f0;
        }

        /* Tooltip Design */
        .status-box .tooltip-summary {
            display: none;
            position: absolute;
            top: 60px;
            left: -150px;
            width: 300px;
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            z-index: 100;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }

        /* Tooltip content */
        .tooltip-summary p {
            margin: 10px 0;
            font-size: 1rem;
            color: #333;
        }

        .tooltip-summary strong {
            display: block;
            font-size: 1rem;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .tooltip-summary span {
            display: block;
            margin-top: -8px;
            font-size: 0.9rem;
            color: #666;
        }

        .tooltip-summary .price {
            font-weight: bold;
            text-align: right;
        }

        .tooltip-summary hr {
            border-color: #eaeaea;
            margin: 10px 0;
        }

        /* Show tooltip on hover */
        .status-box:hover .tooltip-summary {
            display: block;
            opacity: 1;
        }

        /* Tooltip triangle */
        .tooltip-summary::before {
            content: "";
            position: absolute;
            bottom: 100%;
            left: 50%;
            margin-left: -10px;
            border-width: 10px;
            border-style: solid;
            border-color: transparent transparent white transparent;
        }

        /* Media Queries */
        @@media (max-width: 768px) {
            .header h1 {
                font-size: 1.5rem;
            }

            .status-box {
                width: 40px;
                height: 40px;
            }

            .status-box i {
                font-size: 1.2rem;
            }

            .tooltip-summary {
                width: 280px;
                left: -120px;
                top: 50px;
            }

            .order-table th, .order-table td {
                white-space: normal;
            }
            .SpecialOne{
                display: none;
            }
        }

        /* Tooltip Product Rows */
        .tooltip-summary .product-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }

        .tooltip-summary .product-row:last-child {
            padding-bottom: 0;
        }

    </style>
</head>
<body>
    <!-- Header -->
    <div class="container mt-4">
        <div class="col-12">
            <div class="header">
                <h1><i class="fas fa-shopping-cart"></i> Alış-veriş tarixçəm</h1>
            </div>
        </div>
        

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mt-4 justify-content-center">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-user"></i> Şəxsi hesabım</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#"><i class="fas fa-history"></i> Alış-veriş tarixçəm</a>
            </li>
        </ul>

        <!-- Order Table -->
        <div class="order-table mt-4">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Sifariş nömrəsi</th>
                        <th>Sifariş tarixi</th>
                        <th>Məbləğ</th>
                        <th>Ödəniş növü</th>
                        <th>Çatdırılma</th>
                        <th class="SpecialOne">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>SM 10341</td>
                        <td>09.10.2024</td>
                        <td>2,448.00 AZN</td>
                        <td>Onlayn ödəniş</td>
                        <td>Mağazadan götür</td>
                        <td class="SpecialOne">
                            <div class="status-box">
                                <i class="fas fa-box"></i>
                                <!-- Tooltip with summary of bought products -->
                                <div class="tooltip-summary">
                                    <div class="product-row">
                                        <div>
                                            <strong>HONOR 200 8GB/256GB</strong>
                                            <span>Black</span>
                                            <span>(1 ədəd)</span>
                                        </div>
                                        <div class="price">1.099,00 AZN</div>
                                    </div>
                                    <hr>
                                    <div class="product-row">
                                        <div>
                                            <strong>Samsung Galaxy Watch</strong>
                                            <span>Ultra Dark Gray</span>
                                            <span>(1 ədəd)</span>
                                        </div>
                                        <div class="price">1.349,00 AZN</div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
