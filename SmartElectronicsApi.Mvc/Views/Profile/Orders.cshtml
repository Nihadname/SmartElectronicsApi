@using SmartElectronicsApi.Mvc.ViewModels.Order
@using SmartElectronicsApi.Mvc.ViewModels.pagination
@model PaginatedResponseVM<OrderListItemVm>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-color: #f5f6f8;
            font-family: 'Roboto', sans-serif;
        }

        .header {
            background-color: #1d294f;
            padding: 30px;
            color: white;
            text-align: center;
            border-radius: 10px;
        }

        .header h1 {
            font-size: 2rem;
            font-weight: bold;
        }

        .nav-tabs {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .nav-tabs .nav-item .nav-link {
            background-color: white;
            border-radius: 20px;
            margin: 5px 10px;
            padding: 10px 25px;
            font-size: 1rem;
            color: #444;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .nav-tabs .nav-item .nav-link.active {
            background-color: #2874f0;
            color: white;
        }

        .order-table {
            background-color: white;
            margin-top: 30px;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            width: 100%;
        }

        .order-table th, .order-table td {
            white-space: nowrap;
            font-size: 0.95rem;
        }

        .order-table th {
            color: #444;
            font-weight: 600;
            padding: 15px;
        }

        .order-table td {
            color: #666;
            padding: 15px;
            vertical-align: middle;
        }

        .status-box {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f3f4f7;
            border-radius: 12px;
            position: relative;
            cursor: pointer;
        }

        .status-box i {
            font-size: 1.5rem;
            color: #2874f0;
        }

        .tooltip-summary {
            display: none;
            position: absolute;
            top: 60px;
            left: -150px;
            width: 300px;
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            z-index: 100;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }

        .tooltip-summary p {
            margin: 10px 0;
            font-size: 1rem;
            color: #333;
        }

        .tooltip-summary strong {
            display: block;
            font-size: 1rem;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .tooltip-summary span {
            display: block;
            margin-top: -8px;
            font-size: 0.9rem;
            color: #666;
        }

        .tooltip-summary .price {
            font-weight: bold;
            text-align: right;
        }

        .tooltip-summary hr {
            border-color: #eaeaea;
            margin: 10px 0;
        }

        .status-box:hover .tooltip-summary {
            display: block;
            opacity: 1;
        }

        .tooltip-summary::before {
            content: "";
            position: absolute;
            bottom: 100%;
            left: 50%;
            margin-left: -10px;
            border-width: 10px;
            border-style: solid;
            border-color: transparent transparent white transparent;
        }

        @@media (max-width: 768px) {
            .header h1 {
                font-size: 1.5rem;
            }

            .status-box {
                width: 40px;
                height: 40px;
            }

            .status-box i {
                font-size: 1.2rem;
            }

            .tooltip-summary {
                width: 280px;
                left: -120px;
                top: 50px;
            }

            .order-table th, .order-table td {
                white-space: normal;
            }
            .SpecialOne {
                display: none;
            }
        }

        .tooltip-summary .product-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }

        .tooltip-summary .product-row:last-child {
            padding-bottom: 0;
        }

    </style>
</head>
<body>
    <!-- Header -->
    <div class="container mt-4">
        <div class="col-12">
            <div class="header">
                <h1><i class="fas fa-shopping-cart"></i> Alış-veriş tarixçəm</h1>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mt-4 justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Profile" ><i class="fas fa-user"></i> Şəxsi hesabım</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#"><i class="fas fa-history"></i> Alış-veriş tarixçəm</a>
            </li>
        </ul>

        <!-- Order Table -->
        <div class="order-table mt-4">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Sifariş nömrəsi</th>
                        <th>Sifariş tarixi</th>
                        <th>Status</th>
                        <th>Məbləğ</th>
                        <th>Ödəniş növü</th>
                        <th>Çatdırılma</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Data)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderDate.ToShortDateString()</td>
                            <td>@order.Status</td>
                            <td>@order.TotalAmount.ToString("C2")</td>

                            <td>@order.ShippingAddress</td>
                            <td class="SpecialOne">
                                <div class="status-box">
                                    <i class="fas fa-box"></i>
                                    <div class="tooltip-summary">
                                        @foreach (var item in order.Items)
                                        {
                                            <div class="product-row">
                                                <div>
                                                    <strong>@(item.ProductName.Length > 40 ? item.ProductName.Substring(0, 40) + "..." : item.ProductName)</strong>

                                                    <span>@(item.ProductVariationId.HasValue ? "Variation ID: " + item.ProductVariationId : "No variation")</span>
                                                    <span>(@item.Quantity ədəd)</span>
                                                </div>
                                                <div class="price">@item.UnitPrice.ToString("C2")</div>
                                            </div>
                                            <hr />
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Previous Page -->
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Orders", "Profile", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })" tabindex="-1">Previous</a>
        </li>

        <!-- Page Numbers -->
        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalRecords / Model.PageSize); i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("Orders", "Profile", new { pageNumber = i, pageSize = Model.PageSize })">@i</a>
            </li>
        }

        <!-- Next Page -->
        <li class="page-item @(Model.PageNumber == Math.Ceiling((double)Model.TotalRecords / Model.PageSize) ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Orders", "Profile", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })">Next</a>
        </li>
    </ul>
</nav>
