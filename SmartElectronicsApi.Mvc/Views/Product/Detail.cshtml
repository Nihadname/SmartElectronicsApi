  <script>
    // Initialize Swiper for the reviews
    var reviewSwiper = new Swiper('.mySwiperReviews', {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });

    // Handle the thumbnail clicks
    const thumbnailCards = document.querySelectorAll('.thumbnail-card');
    const productName = document.getElementById('product-name');
    const productPrice = document.getElementById('product-price');
    const productStock = document.getElementById('product-stock');

    thumbnailCards.forEach((card) => {
      card.addEventListener('click', function () {
        // Remove active class from all cards
        thumbnailCards.forEach((c) => c.classList.remove('active'));
        // Add active class to the clicked card
        this.classList.add('active');

        // Update product details based on the clicked card
        productName.textContent = this.dataset.name;
        productPrice.textContent = this.dataset.price;
        productStock.textContent = `In Stock: ${this.dataset.stock}`;
      });
    });
