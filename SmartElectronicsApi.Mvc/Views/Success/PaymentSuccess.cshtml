@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Success</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .success-container {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 500px;
            width: 100%;
            animation: slideIn 1s ease-out;
        }

        .success-container h1 {
            font-size: 36px;
            font-weight: bold;
            color: #27ae60;
            margin: 0;
            animation: fadeIn 1s ease-in;
        }

        .success-container p {
            font-size: 18px;
            color: #555;
            margin-top: 15px;
        }

        .success-checkmark {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #27ae60;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            animation: pulse 1.5s infinite;
        }

        .success-checkmark svg {
            fill: white;
            width: 50px;
            height: 50px;
        }

        .summary-section {
            margin-top: 30px;
            font-size: 18px;
        }

        .summary-section div {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .summary-section div span {
            color: #333;
        }

        .btn-container {
            margin-top: 40px;
        }

        .btn-container a {
            background-color: #27ae60;
            color: white;
            padding: 12px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .btn-container a:hover {
            background-color: #1e8449;
        }

        @@keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        @@keyframes slideIn {
            0% { transform: translateY(100px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        @@media (max-width: 576px) {
            .success-container {
                padding: 20px;
            }

            .success-checkmark {
                width: 80px;
                height: 80px;
            }

            .success-checkmark svg {
                width: 40px;
                height: 40px;
            }

            .summary-section div {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>

    <div class="success-container">
        <div class="success-checkmark">
            <!-- SVG checkmark icon -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M9 19l-7-7 1.5-1.5L9 16l11-11L22.5 6l-13.5 13.5z"/></svg>
        </div>
        <h1>Payment Successful!</h1>
        <p>Your payment has been processed successfully.</p>

       

        <div class="btn-container">
            <a href="/">Return to Home</a>
        </div>
    </div>

</body>
</html>
