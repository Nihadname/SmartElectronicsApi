<div class="container mt-4">
    <div class="row">
        <div class="col-md-3 thisPart">
            <ul class="vertical-menu shadow">
                @foreach (var item in Model.Categories)
                {
                    <li>
                        <i class="@item.Icon"></i>
                        <!-- Redirect to the Product Index page with the selected categoryId -->
                        <a href="@Url.Action("Index", "Product", new { categoryId = item.Id })">@item.Name</a>

                        <div class="category-details">
                            <div class="all">
                                <div class="row">
                                    @foreach (var cate in item.SubCategories)
                                    {
                                        @if (cate != null)
                                        {
                                            <div class="col-12 col-md-6 col-lg-4">
                                                <h6>
                                                    <a style="font-size: 16px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;" href="@Url.Action("Index", "Product", new { categoryId = item.Id, subCategoryId = cate.Id })">
                                                        @cate.Name
                                                    </a>
                                                </h6>

                                                @foreach (var cate2 in cate.brandListItemDtos)
                                                {
                                                    <p>
                                                        <a href="@Url.Action("Index", "Product", new { categoryId = item.Id, subCategoryId = cate.Id, brandId = cate2.Id })">
                                                            @cate2.Name
                                                        </a>
                                                    </p>
                                                }
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>


        <div class="col-md-9 ForSlider col-sm-12">
            <div class="swiper swiperMain mb-3">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    @foreach(var item in Model.Sliders){
                         <div class="swiper-slide thisSpecial">
                        <img src="@item.Image" alt="">
                    </div>
                    }
                   
                    
                    <!-- Add more slides as needed -->
                </div>
                <div class="swiper-pagination "></div> <!-- Unique Pagination Element -->

            </div>
            <div class="small-images">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-center">
                            <h1 class="deal-of-week-title">DealOfWeek</h1>
                        </div>
                        <div class="swiper swiperDeal mb-3">
                            <div class="swiper-wrapper">
                                <!-- Product List View Item 1 -->
                                @foreach(var item in Model.produtListItemVMs)
                                {
                                    <div class="swiper-slide">
                                        <div class="product-details2">
                                            <div class="discount-ribbon">-@item.DiscountPercentage%</div>
                                            <div class="product-image">
                                                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id"> 
                                                    <img src="@item.ImageUrls.FirstOrDefault()" width="100" height="100" alt="Apple iPhone 15 Pro 128 GB Blue Titanium" class="img-fluid">
                                                </a>
                                            </div>

                                            <div class="product-info2">
                                                <h5>@item.Name</h5>
                                            </div>

                                            <div class="product-actions2">
                                                <div class="product-price2">
                                                    <span class="old-price">@item.Price AZN</span> <!-- Original Price -->
                                                    <span class="new-price">@item.DiscountedPrice AZN</span> <!-- Discounted Price -->
                                                </div>
                                                <button class="btn btn-buy">Bir kliklə al</button>
                                            </div>
                                        </div>


                                    </div>
                                }

                                <!-- Product List View Item 2 -->
                               
                            </div>
                        </div>
                    </div>
                </div>
